{
  "compilerOptions": {
    "lib": ["ES2019", "DOM", "DOM.Iterable"],
    "target": "ES2019",
    "module": "CommonJS",
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
